<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal" >

    <org.beroot.android.BoardView
        android:id="@+id/itemBoardView"
        android:layout_width="wrap_content"
        android:layout_height="?android:attr/listPreferredItemHeight" />

    <LinearLayout
        android:id="@+id/testtdeljhlkjhdsf"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/fileWhiteLine"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/fileWhiteImg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="100"
                android:padding="2dp"
                android:src="@drawable/whitestone" />

            <TextView
                android:id="@+id/fileWhitePlayerText"
                android:layout_width="fill_parent"
                android:layout_height="50px"
                android:layout_weight="12"
                android:gravity="fill_horizontal"
                android:text="White Player"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fileBlackLine"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/fileBlackImg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="100"
                android:padding="2dp"
                android:src="@drawable/blackstone" />

            <TextView
                android:id="@+id/fileBlackPlayerText"
                android:layout_width="fill_parent"
                android:layout_height="50px"
                android:layout_weight="12"
                android:gravity="fill_horizontal"
                android:text="Black Player"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>
    </LinearLayout>

    <!--
        TextView
        android:id="@+id/sgfFileName"
        android:layout_width="wrap_content"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    -->

</LinearLayout>